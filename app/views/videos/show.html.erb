<div style="width: 95%; max-width: 1000px; height: 85vh; box-sizing: border-box; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; font-family: Arial, sans-serif; font-size: 16px; line-height: 1.6; overflow: auto;">
  <h1 style="text-align: center; color: #333;"><%= @video.title %></h1>
  <p style="text-align: center; color: #666;"><%= @video.description %></p>
  <p style="text-align: center;"><%= link_to @video.url, @video.url, style: 'text-decoration: none; color: #007bff; font-family: Arial, sans-serif;' %></p>

  <!-- Centered full-width container for buttons -->
  <div style="text-align: center; margin-top: 20px;">
    <div style="display: flex; flex-direction: column; gap: 10px; max-width: 300px; margin: 0 auto;">
      <%= link_to 'Edit', edit_video_path(@video), style: 'display: block; text-decoration: none; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; width: 100%;' %>
      <%= link_to 'Back', videos_path, style: 'display: block; text-decoration: none; padding: 10px; background-color: #f8f9fa; color: #007bff; border: 1px solid #007bff; border-radius: 4px; font-size: 16px; cursor: pointer; width: 100%;' %>
    </div>
  </div>
</div>
