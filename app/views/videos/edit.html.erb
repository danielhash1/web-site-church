<<div style="width: 100%; height: 100vh; box-sizing: border-box; margin: 0; padding: 20px; border: 1px solid #ccc; border-radius: 5px; font-family: Arial, sans-serif; font-size: 16px; line-height: 1.6; overflow: auto;">
  <h1 style="text-align: center; color: #333;">Edit Video</h1>

  <%= form_with(model: @video, local: true) do |form| %>
    <% if @video.errors.any? %>
      <div id="error_explanation" style="color: red; background-color: #fdd; padding: 10px; border: 1px solid red; border-radius: 5px; margin-bottom: 20px;">
        <h2 style="font-family: Arial, sans-serif; font-size: 1.2em;"><%= pluralize(@video.errors.count, "error") %> prohibited this video from being saved:</h2>
        <ul style="list-style-type: none; padding: 0;">
          <% @video.errors.full_messages.each do |message| %>
            <li style="font-family: Arial, sans-serif; font-size: 1em;"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <%= form.label :title, style: 'font-family: Arial, sans-serif; font-weight: bold; display: block; margin-bottom: 5px;' %>
      <%= form.text_field :title, style: 'width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :description, style: 'font-family: Arial, sans-serif; font-weight: bold; display: block; margin-bottom: 5px;' %>
      <%= form.text_area :description, style: 'width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= form.label :url, style: 'font-family: Arial, sans-serif; font-weight: bold; display: block; margin-bottom: 5px;' %>
      <%= form.text_field :url, style: 'width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;' %>
    </div>

    <div>
      <%= form.submit 'Update Video', style: 'display: block; width: 100%; padding: 10px; background-color: #28a745; color: white; border: none; border-radius: 4px; font-family: Arial, sans-serif; font-size: 1em; cursor: pointer;' %>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 20px;">
    <%= link_to 'Back', videos_path, style: 'text-decoration: none; color: #007bff; font-family: Arial, sans-serif; font-size: 16px;' %>
  </div>
</div>
