<div style="width: 100vw; height: 100vh; margin: 0; padding: 20px; border: 1px solid #ccc; border-radius: 5px; font-family: Arial, sans-serif; font-size: 16px; line-height: 1.6; box-sizing: border-box; overflow: auto;">
  <h1 style="text-align: center; color: #333;">Blogs</h1>

  <%= link_to 'New Blog', new_blog_path, style: 'text-decoration: none; padding: 8px 16px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; display: block; text-align: center; margin-bottom: 20px;' %>

  <ul style="list-style-type: none; padding: 0;">
    <% @blogs.each do |blog| %>
      <li style="margin-bottom: 10px; border: 1px solid #ccc; padding: 10px; border-radius: 4px; display: flex; justify-content: space-between; align-items: center;">
        <div style="flex: 1;">
          <%= link_to blog.title, blog, style: 'text-decoration: none; color: #333; font-weight: bold; display: block; margin-bottom: 5px;' %>
        </div>
        <div>
          <%= link_to 'Edit', edit_blog_path(blog), style: 'text-decoration: none; color: #007bff; margin-right: 10px;' %>
          <%= link_to 'Delete', blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' }, style: 'text-decoration: none; color: #dc3545;' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

