<div style="width: 95%; max-width: 1000px; height: 85vh; box-sizing: border-box; margin: 0 auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; font-family: Arial, sans-serif; font-size: 16px; line-height: 1.6; overflow: auto;">
  <h1 style="text-align: center; color: #333;"><%= @blog.title %></h1>
  <p style="text-align: center; color: #666;"><%= @blog.description %></p>

  <div style="text-align: center; margin-top: 20px;">
    <!-- Full-width button container -->
    <div style="display: flex; flex-direction: column; gap: 10px; max-width: 300px; margin: 0 auto;">
      <%= link_to 'Edit', edit_blog_path(@blog), style: 'display: block; text-decoration: none; padding: 10px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 16px; cursor: pointer; width: 100%;' %>
      <%= link_to 'Back', blogs_path, style: 'display: block; text-decoration: none; padding: 10px; background-color: #f8f9fa; color: #007bff; border: 1px solid #007bff; border-radius: 4px; font-size: 16px; cursor: pointer; width: 100%;' %>
    </div>
  </div>
</div>

